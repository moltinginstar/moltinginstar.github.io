---
title: Samblings
pagination:
  data: collections.blog
  size: 20
  reverse: true
---
{% layout "page.liquid" %}

{% block head %}
<link rel="stylesheet" href="{{ '/styles/blog.css' | url | bust }}">

<style>
  .nav-links {
    margin-block-start: var(--header-offset);
  }

  #content {
    gap: 3rem;
  }

  article .heading .title {
    text-decoration: none;
    color: var(--color-text);
  }

  article .heading .title:hover {
    text-decoration: underline;
  }

  article .heading .tags {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    -webkit-user-select: none;
    user-select: none;
  }

  article .read-more {
    color: var(--color-text-muted);
    text-decoration: none;
    -webkit-user-select: none;
    user-select: none;
    align-self: flex-end;
  }

  article .read-more:hover {
    color: inherit;
    text-decoration: underline;
  }

  #navigation {
    display: flex;
    overflow-x: auto;
    font-size: 1rem;
    margin-inline: auto;
  }

  #navigation .page {
    flex: 0 0 2ch;
    padding: 0.5rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-decoration: none;
    text-align: center;
  }

  #navigation .page.active:hover {
    color: var(--color-text);
    text-decoration: underline;
  }

  #navigation .page[aria-current] {
    color: var(--color-text);
    font-weight: 600;
  }

  @media screen and (max-width: 768px) {
    .nav-links {
      margin-block-start: unset;
    }
  }
</style>

<link rel="stylesheet" href="{{ '/styles/animate.css' | url | bust }}">

<link
  rel="stylesheet"
  href="https://unpkg.com/@highlightjs/cdn-assets@11.11.1/styles/github.min.css"
  media="(prefers-color-scheme: light)"
>
<link
  rel="stylesheet"
  href="https://unpkg.com/@highlightjs/cdn-assets@11.11.1/styles/github-dark.min.css"
  media="(prefers-color-scheme: dark)"
>
{% endblock %}

{% block body %}
<nav id="nav">
  <input id="nav-toggle" type="checkbox">
  <label for="nav-toggle" class="animate">☰</label>

  <div id="nav-content">
    <div class="nav-links">
      <div class="nav-item nav-link animate"><a href="/">About</a></div>

      <div class="nav-item nav-link animate">
        <a href="https://github.com/moltinginstar">GitHub</a>
      </div>

      <div class="nav-item nav-link animate"><a href="/haiku">Haiku</a></div>
    </div>
  </div>
</nav>

<main class="animate" style="--i: 3">
  <header>
    <span class="logo" aria-label="Samblings" title="Samblings"
      >Sambl–·ngs</span
    >
  </header>

  <div id="content">
    {% for post in pagination.items %}
      <article id="article-{{ post.fileSlug }}">
        <div class="heading">
          <p class="date">{{ post.date | date: "%b %-d, %Y" }}</p>

          <a class="title" href="{{ post.url | url }}">
            <h1>{{ post.data.title }}</h1>
          </a>

          <p class="tags">
            {% for category in post.data.categories %}
              <span class="tag">{{ category }}</span>
            {% endfor %}
          </p>
        </div>

        {{-
          post.content
          | strip_html
          | strip
          | truncatewords: 50, "&nbsp;..."
        -}}

        <a class="read-more" href="{{ post.url | url }}">Read more →</a>
      </article>
    {% endfor %}
  </div>

  <nav id="navigation">
    {% if pagination.totalPages > 1 %}
      {% assign currentPage = pagination.pageNumber %}
      {% assign windowSize = 2 %}

      {%- for pageEntry in pagination.pages -%}
        {% assign i = forloop.index0 %}

        {% assign windowStart = currentPage | minus: windowSize %}
        {% assign windowEnd = currentPage | plus: windowSize %}

        {%
          assign showPage = forloop.first
          or forloop.last
          or i >= windowStart
          and i <= windowEnd
        %}

        {% if showPage %}
          {% assign previousPage = i | minus: 1 %}
          {% if i > 0 and previousShownPage != previousPage %}
            <span class="page">&middot;&middot;&middot;</span>
          {% endif %}

          <a
            class="page active"
            href="{{ pagination.hrefs[i] }}"
            {% if page.url == pagination.hrefs[i] %}
              aria-current="page"
            {% endif %}
          >
            {{- forloop.index -}}
          </a>

          {% assign previousShownPage = i %}
        {% endif %}
      {%- endfor -%}
    {% endif %}
  </nav>

  <footer>
    <p>
      &copy;&nbsp;{{ "now" | date: "%Y" }} moltinginstar. All rights reserved.
    </p>
  </footer>
</main>
{% endblock %}
