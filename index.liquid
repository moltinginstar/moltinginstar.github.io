{% layout "page.liquid" %}

{% block head %}
<style>
  body {
    max-inline-size: 80ch;
    margin: 0 auto;
    padding: 8vh 6vw;
    display: flex;
    flex-direction: column;
  }

  nav {
    display: flex;
    justify-content: flex-end;
    flex-wrap: wrap;
    gap: 0.25rem clamp(1rem, 4vw, 3rem);
    margin-block-end: 8vh;
    -webkit-user-select: none;
    user-select: none;
  }

  @media screen and (max-width: 1024px) {
    nav {
      justify-content: center;
    }
  }

  nav > a {
    text-transform: lowercase;
    text-decoration: none;
    color: var(--color-text-muted);
  }

  nav > a:hover {
    text-decoration: underline;
    color: inherit;
  }

  main {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  footer {
    margin-block-start: 1rem;
  }

  .greeting {
    font-size: 1.2rem;
    font-weight: 400;
  }

  .decoration {
    pointer-events: none;
    -webkit-user-select: none;
    user-select: none;
  }
</style>

<link rel="stylesheet" href="{{ '/styles/animate.css' | url | bust }}">
{% endblock %}

